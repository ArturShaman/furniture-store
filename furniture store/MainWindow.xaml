<Window x:Class="furniture_store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:furniture_store"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Margin="0" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/font.jpg"/>
        </Grid.Background>
        <Button Content="Войти как пользователь" HorizontalAlignment="Left" Margin="213,157,0,0" VerticalAlignment="Top" Width="333" Background="{x:Null}" FontSize="26" FontFamily="Bookman Old Style" BorderBrush="Black" Foreground="White" Click="Button_Click_1" OpacityMask="White" Visibility="Hidden"/>
        <Button Content="Войти как администратор" HorizontalAlignment="Left" Margin="213,197,0,0" VerticalAlignment="Top" Width="333" Background="{x:Null}" FontSize="24" FontFamily="Bookman Old Style" BorderBrush="Black" Foreground="White" Click="Button_Click_2"/>
        <Button Content="Выход" HorizontalAlignment="Left" Margin="10,377,0,0" VerticalAlignment="Top" Width="94" Background="{x:Null}" FontSize="24" FontFamily="Bookman Old Style" BorderBrush="Black" Foreground="White" Click="Button_Click"/>
    </Grid>
</Window>
