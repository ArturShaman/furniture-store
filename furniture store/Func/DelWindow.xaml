<Window x:Class="furniture_store.Func.DelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:furniture_store.Func"
        mc:Ignorable="d"
        Title="AddWindow" Height="250" Width="250"  WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/font_top.jpg"/>
        </Grid.Background>
        <TextBox x:Name="ProdDel" FontSize="15" FontFamily="Bookman Old Style" HorizontalAlignment="Left" Height="22" Margin="119,103,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102" Background="{x:Null}" BorderThickness="0,0,0,1"/>
        <Label x:Name="Id" Content="Введите ID" HorizontalAlignment="Left" Margin="10,97,0,0" VerticalAlignment="Top" FontSize="15" FontFamily="Bookman Old Style"/>
        <Button x:Name="DelBut"  Content="Удалить" FontSize="15" FontFamily="Bookman Old Style" HorizontalAlignment="Left" Margin="72,187,0,0" VerticalAlignment="Top" Width="90" Background="{x:Null}" Click="DelBut_Click"/>
    </Grid>
</Window>
